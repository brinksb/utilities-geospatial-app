{
  "presets": [
    { "id": "default", "name": "Default", "layers": ["buildings", "pipes", "services"] },
    { "id": "network-view", "name": "Network", "layers": ["buildings", "pipes", "services"] },
    { "id": "infrastructure", "name": "Infrastructure Only", "layers": ["pipes", "services"] }
  ],
  "layers": [
    {
      "id": "base-layers",
      "name": "Base Layers",
      "type": "group",
      "visible": true,
      "expanded": true,
      "style": {},
      "children": [
        {
          "id": "buildings",
          "name": "Buildings",
          "type": "mvt",
          "url": "/tiles/osm_buildings_mvt/{z}/{x}/{y}",
          "visible": true,
          "style": {
            "fillColor": "#FED90F",
            "lineColor": "#D4A900",
            "lineWidth": 1,
            "opacity": 180
          },
          "pickable": true,
          "autoHighlight": true,
          "highlightColor": "#FF6B35"
        }
      ]
    },
    {
      "id": "infrastructure",
      "name": "Infrastructure",
      "type": "group",
      "visible": true,
      "expanded": true,
      "style": {},
      "children": [
        {
          "id": "pipes",
          "name": "Utility Network",
          "type": "mvt",
          "url": "/tiles/synth_pipes_mvt/{z}/{x}/{y}",
          "visible": true,
          "style": {
            "lineColor": "#0078D4",
            "lineWidth": 3,
            "opacity": 220
          },
          "pickable": true,
          "categorical": {
            "property": "class",
            "colors": {
              "main": "#0078D4",
              "secondary": "#00A86B"
            }
          }
        },
        {
          "id": "services",
          "name": "Service Lines",
          "type": "mvt",
          "url": "/tiles/synth_services_mvt/{z}/{x}/{y}",
          "visible": false,
          "style": {
            "lineColor": "#888888",
            "lineWidth": 1.5,
            "opacity": 200
          },
          "pickable": false
        }
      ]
    },
    {
      "id": "analysis",
      "name": "Analysis",
      "type": "group",
      "visible": true,
      "expanded": false,
      "style": {},
      "children": [
        {
          "id": "network",
          "name": "Graph Overlay",
          "type": "geojson",
          "visible": false,
          "style": {
            "fillColor": "#FF8C00",
            "lineColor": "#FF8C00",
            "lineWidth": 3,
            "opacity": 255
          },
          "pickable": true
        },
        {
          "id": "critical-pipes",
          "name": "Critical Pipes",
          "type": "mvt",
          "url": "/tiles/synth_critical_pipes_mvt/{z}/{x}/{y}",
          "visible": false,
          "style": {
            "lineColor": "#22C55E",
            "lineWidth": 4,
            "opacity": 230
          },
          "pickable": true,
          "autoHighlight": true,
          "highlightColor": "#FFFFFF",
          "categorical": {
            "property": "criticality",
            "colors": {
              "low": "#22C55E",
              "medium": "#EAB308",
              "high": "#EF4444"
            }
          }
        }
      ]
    }
  ]
}
